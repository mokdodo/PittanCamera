<?xml version="1.0" encoding="utf-8"?>
<selector
     xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ビューが使用不可になっているときは「droid_disabl.png」を表示 -->
    <item android:state_enabled="false">
        <shape android:shape = "oval">
            <solid
                android:color = "#333333"/>
            <size 
            	android:height = "50dp"
            	android:width = "50dp" />
            
        </shape>
    </item>
 
    <!-- ビューがタッチされているとき -->
    <item android:state_pressed="true">
        <shape android:shape = "oval">
            <gradient
		        android:startColor="#FFFFFF"
		        android:centerColor="#FFFFFF"
		        android:endColor="#AFEEEE"
		        android:angle="315" />
            <size 
            	android:height = "50dp"
            	android:width = "50dp" />
            
        </shape>
    </item>
    <!-- ビューが タッチされていないとき -->
    <item android:state_pressed="false">
        <shape android:shape = "oval">
            <solid
            	android:color = "#66000066"/>
            <stroke
                android:color= "#000033"
                android:width="2dp" />
            <!-- <solid
            	android:color = "#6999AE"/> -->
            <size 
            	android:height = "50dp"
            	android:width = "50dp" />
            
        </shape>
    </item>
</selector>